@model TPWeb3.Models.UsuarioVM
<div class="container mt-4">
    <form method="post" asp-controller="Home" asp-action="Index">
        <fieldset>
            <legend>Iniciar sesión</legend>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label mt-4">Email</label>
                <input asp-for="Email" type="email" class="form-control" aria-describedby="emailHelp" placeholder="Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="form-label mt-2">Contraseña</label>
                <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Contraseña">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.error))
            {
                <span class="text-danger">@ViewBag.error</span>
            }
            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-primary">Ingresar</button>
            </div>
        </fieldset>
    </form>
</div>