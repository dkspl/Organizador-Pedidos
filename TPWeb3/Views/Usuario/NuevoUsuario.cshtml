@model Entidades.Entidades.Usuario
<partial name="_NavbarAdmin" />
<div class="container">
    <h2 class="mt-4">Crear nuevo usuario</h2>
    <form method="post" asp-controller="Usuario" asp-action="NuevoUsuario">
        <fieldset>
            <div class="form-group">
                <label asp-for="@Model.Nombre" class="form-label mt-4">Nombre</label>
                <input asp-for="@Model.Nombre" class="form-control" placeholder="Nombre">
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Apellido" class="form-label mt-2">Apellido</label>
                <input asp-for="@Model.Apellido" class="form-control" placeholder="Apellido">
                <span asp-validation-for="@Model.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label mt-2">Email</label>
                <input asp-for="@Model.Email" class="form-control" placeholder="Email">
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Password" class="form-label mt-2">Password</label>
                <input asp-for="@Model.Password" type="password" class="form-control" placeholder="Password">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-check form-switch mt-4">
                <input asp-for="@Model.EsAdmin" class="form-check-input" type="checkbox" id="esAdmin">
                <label asp-for="@Model.EsAdmin" class="form-check-label">¿Es administrador?</label>
                <span asp-validation-for="@Model.EsAdmin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.FechaNacimiento" class="form-label mt-4">Fecha de nacimiento</label>
                <input asp-for="@Model.FechaNacimiento" type="date" class="form-control" placeholder="Fecha de nacimiento">
            </div>
            <input type="hidden" value="" name="retorno" id="retorno" />
            <a href="/Usuario" class="btn btn-outline-danger mt-2">Cancelar</a>
            <button type="submit" class="btn btn-danger mt-2 ml-2" id="guardar">Guardar usuario</button>
            <button type="submit" class="btn btn-danger mt-2 ml-2" id="guardarycrear">Guardar y crear otro</button>
        </fieldset>
    </form>
</div>